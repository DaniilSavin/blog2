<h3>Название: <%= @post.title%></h3>
<p>Текст: <%= @post.body%></p>
<hr>
<%= link_to "Редактировать", edit_post_path(@post), :class => 'btn' %>
<%= button_to "Удалить", post_path(@post), method: :delete, :class => 'btn btn-warning' %>
<hr>
<h2>Все комментарии</h2>
<% @post.comments.each do |comment| %>
    <div>
        <p><strong><%= comment.username%> </strong>: <%= comment.body%></p>
    </div>
<% end %>
<hr>
<h2>Добавление Комментария</h2>
<%= form_for ([@post, @post.comments.build]) do |f| %>
    <p>
        Пользователь<br>
        <%= f.text_field :username %>
    </p>
    
    <p>
        Текст комментария<br>
        <%= f.text_area :body %>
    </p>
    
    <p>
        <%= f.submit("Добавить комментарий") %>
    </p>

<% end %>